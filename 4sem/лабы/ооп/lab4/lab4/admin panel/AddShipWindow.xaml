<Window x:Class="lab4.AddShipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:lab4"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"         Background="{DynamicResource BackgroundColor}"
        xmlns:vm="clr-namespace:lab4.ViewModels"
        Title="Add Ship" Height="550" Width="500">

    <Window.DataContext>
        <vm:AddShipWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
      
        
       

        <Style TargetType="Button">
            <Style.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="LightBlue" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

     

    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{DynamicResource Name}" FontSize="16"/>
            <TextBox Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}" x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="{DynamicResource Description}" FontSize="16"/>
            <TextBox  Text="{Binding Description,UpdateSourceTrigger=PropertyChanged}"  x:Name="DescriptionTextBox" Margin="0,0,0,10" AcceptsReturn="True" Height="90"/>

            <TextBlock Text="{DynamicResource Price}" FontSize="16"/>
            <TextBox Text="{Binding Price,UpdateSourceTrigger=PropertyChanged}" x:Name="PriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="{DynamicResource ImagePath}" FontSize="16"/>
            <TextBox Text="{Binding ImagePath,UpdateSourceTrigger=PropertyChanged}" x:Name="PhotopathTextBox" Margin="0,0,0,10" IsReadOnly="True"/>
            <Button Content="{DynamicResource ChooseFile}" Command="{Binding SelectFileCommand}" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10"/>

            <Border x:Name="ImageBorder" BorderThickness="0" BorderBrush="White">
                <Image Source="{Binding ImagePreview}" x:Name="ImagePreview" Height="100" Margin="0,0,0,10"/>
            </Border>

            <Button Content="{DynamicResource Add}" Command="{Binding  AddShipCommand}" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>