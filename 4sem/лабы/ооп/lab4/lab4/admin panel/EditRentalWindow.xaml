<Window x:Class="lab4.admin_panel.EditRentalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4.admin_panel"
        xmlns:vm="clr-namespace:lab4.adminViewModels"
        mc:Ignorable="d"
        Title="EditRentalWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:EditRentalViewModel/>
    </Window.DataContext>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" DataContext="{Binding Rental}">
            <StackPanel Margin="10">
                <TextBlock Text="ship id"  FontSize="14"/>
                <TextBox Text="{Binding ShipId, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="user id" FontSize="14"/>
                <TextBox Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Начало аренды" FontSize="14"/>
                <DatePicker SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Конец аренды" FontSize="14"/>
                <DatePicker SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Статус" FontSize="14"/>
                <TextBox Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Цена" FontSize="14"/>
                <TextBox Text="{Binding Cost, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Margin="0,0,0,10"/>

                <Button Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" Content="{DynamicResource Save}" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
