<Window x:Class="lab4.editShipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        xmlns:vm="clr-namespace:lab4.ViewModels"
        mc:Ignorable="d"         Background="{DynamicResource BackgroundColor}"

        Title="" Height="450" Width="600">
    <Window.DataContext>
        <vm:EditShipViewModel/>
    </Window.DataContext>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <Image Source="{Binding ShipImage}" x:Name="ShipImage" Height="200" Stretch="Uniform" Margin="0 0 0 10"/>
                <TextBlock Text="{DynamicResource Name}" FontSize="14"/>
                <TextBox Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}" x:Name="NameTextBox" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="{DynamicResource Description}" FontSize="14"/>
                <TextBox Text="{Binding Description,UpdateSourceTrigger=PropertyChanged}" x:Name="DescriptionTextBox" FontSize="14" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                <TextBlock Text="{DynamicResource Price}" FontSize="14"/>
                <TextBox Text="{Binding Price,UpdateSourceTrigger=PropertyChanged}" x:Name="PriceTextBox" FontSize="14" Margin="0,0,0,10"/>
                <Button Command="{Binding SaveCommand}" Content="{DynamicResource Save}"  Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>