<Window x:Class="lab4.editShipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="" Height="450" Width="600">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <Image x:Name="ShipImage" Height="200" Stretch="Uniform" Margin="0 0 0 10"/>
                <TextBlock Text="{DynamicResource Name}" FontSize="14"/>
                <TextBox x:Name="NameTextBox" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="{DynamicResource Description}" FontSize="14"/>
                <TextBox x:Name="DescriptionTextBox" FontSize="14" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                <TextBlock Text="{DynamicResource Price}" FontSize="14"/>
                <TextBox x:Name="PriceTextBox" FontSize="14" Margin="0,0,0,10"/>
                <Button Content="{DynamicResource Save}" Click="SaveButton_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>