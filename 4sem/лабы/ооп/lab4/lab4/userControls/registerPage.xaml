<Window x:Class="lab4.userControls.registerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:lab4"
        xmlns:vm="clr-namespace:lab4.ViewModels"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Регистрация" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:RegisterViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <SolidColorBrush x:Key="OceanBlue" Color="#1E88E5"/>
        <SolidColorBrush x:Key="LightWave" Color="#E3F2FD"/>

        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="md:HintAssist.FloatingScale" Value="0.8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="md:HintAssist.Foreground" Value="{StaticResource OceanBlue}"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="{StaticResource OceanBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LightWave}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--<Path Grid.Row="0" Stretch="Fill" Height="30"
              Data="M0,20 Q100,0 200,20 T400,20 T600,20 T800,20 T900,20 L900,0 L0,0 Z"
              Fill="{StaticResource OceanBlue}" Opacity="0.1"/>-->

        <md:Card Grid.Row="1" Margin="50" UniformCornerRadius="6" Padding="40"
                 Background="White"
                 BorderBrush="{StaticResource OceanBlue}" BorderThickness="0 0 0 3">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Регистрация" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                               Foreground="{StaticResource OceanBlue}"
                               HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                             md:HintAssist.Hint="Логин"/>

                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             md:HintAssist.Hint="Имя пользователя"
                             Margin="0,10,0,10"/>

                    <PasswordBox 
                        PasswordChanged="PasswordBox_PasswordChanged"
                                 md:HintAssist.Hint="Пароль"
                                 Margin="0,10,0,10"/>

                    <PasswordBox 
                        PasswordChanged="PasswordBox_PasswordChanged_1"
                                 md:HintAssist.Hint="Подтвердите пароль"
                                 Margin="0,10,0,20"/>

                    <Button Command="{Binding RegisterCommand}"
                            Content="Зарегистрироваться"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="Уже есть аккаунт?" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock>
                            <Hyperlink Command="{Binding NavigateToLoginCommand}"
                                       Foreground="{StaticResource OceanBlue}"
                                       TextDecorations="None">
                                Войти
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </md:Card>

        <!--<Path Grid.Row="2" Stretch="Fill" Height="30"
              Data="M0,0 Q100,20 200,0 T400,0 T600,0 T800,0 T900,0 L900,20 L0,20 Z"
              Fill="{StaticResource OceanBlue}" Opacity="0.1"/>-->
    </Grid>
</Window>